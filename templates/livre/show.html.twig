{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
<div class="container py-3">
    <h3>Livre</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nbpages</th>
                <td>{{ livre.nbpages }}</td>
            </tr>
            <tr>
                <th>Date_de_parution</th>
                <td>{{ livre.dateDeParution ? livre.dateDeParution|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ livre.note }}</td>
            </tr>
        </tbody>
    </table>

 <h3>Auteurs</h3>
 <table class="table">
    {% for livre in livre.auteurs %}
        <tbody>
            <tr>
                <th>Auteur</th>
                <td>{{ livre.nomprenom }}</td>
            </tr>
        </tbody>
    {% endfor %}
    </table>

    
    
    <a href="{{ path('livre_index') }}" class="btn btn-primary"><i class="icon-refresh"></i> Retour</a>
</div>
{% endblock %}
